@{
    ViewData["Title"] = "Formulario de contacto";
}

<form asp-controller="Home" asp-action="Contacto">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" value="" id="nombre" class="form-control" name="nombre" placeholder="Ingrese su nombre..."/> 
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" value="" id="email" class="form-control" name="email" placeholder="Ingrese su email..." />
    </div>
    <div class="mb-3">
        <label for="mensaje" class="form-label">Mensaje</label>
        <textarea class="form-control" id="mensaje" name="mensaje" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>